<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context="com.aantaya.imagewars.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/vote_image_title"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_background"/>
    
    <TextView
        android:id="@+id/vote_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/vote_image_description"
        android:textStyle="bold"
        android:text="@string/image_title" />

    <TextView
        android:id="@+id/vote_image_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/vote_positive_button"
        android:text="@string/image_desc" />

    <Button
        android:id="@+id/vote_negative_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="50dp"
        android:background="#dc3545"
        android:textColor="#fff"
        android:text="Hate It"/>

    <Button
        android:id="@+id/vote_positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_margin="50dp"
        android:background="#007bff"
        android:textColor="#fff"
        android:text="Love It"/>
</RelativeLayout>
